<%= turbo_frame_tag dom_id(comment) do %>
  <%= form_with model: [@post, comment], class: 'card' do |form| %>
    <div class="card-body">
      <% if alert.present? %>
        <p class="alert alert-danger p-2 m-0 mb-2"><%= alert %></p>
      <% end %>
      <div class="mb-3">
        <%= form.text_area :body, rows: 3, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.submit "Save", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>

