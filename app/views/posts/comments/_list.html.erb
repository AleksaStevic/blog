<h2>Comments</h2>
<hr>
<% if @comments.any? %>
  <% @comments.each do |comment| %>
    <%= render "posts/comments/comment", comment: comment %>
  <% end %>
  <nav class="d-flex justify-content-center">
    <ul class="pagination pagination-sm">
      <li class="page-item">
        <%= link_to_prev_page @comments, 'Prev', params: { class: 'page-link' } %>
      </li>
      <li class="page-item">
        <%= link_to_next_page @comments, 'Next', params: { class: 'page-link' } %>
      </li>
    </ul>
  </nav>
<% else %>
  <p class="text-muted">No comments yet.</p>
<% end %>
<hr>
<% if user_signed_in? %>
  <h2>Add a comment</h2>
  <%= render "posts/comments/form" %>
<% else %>
  <p>
    You need to <%= link_to "Sign in", new_user_session_path %> to add a comment.
  </p>
<% end %>