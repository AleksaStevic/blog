<% content_for :title, "Posts" %>

<div class="container mt-5">
  <h1>Posts</h1>
  <hr>
  <div id="posts" class="row row-cols-3">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="col">
          <%= render post %>
        </div>
      <% end %>
    <% else %>
      <p>There are no posts available.</p>
    <% end %>
  </div>
</div>
